<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.include.menu.menu_bottom.ItemCart.ItemCartFragment"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_item_cart_confirm_background"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_item_cart_confirm_namebattery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Name Battery"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/primary_text"/>

        <TextView
            android:id="@+id/tv_item_cart_confirm_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Point"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_cart_confirm_namebattery"
            android:textColor="@color/primary_text"/>


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Điểm: "
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_item_cart_confirm_namebattery"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_cart_confirm_namebattery"
            android:textColor="@color/primary_text"/>

        <TextView
            android:id="@+id/tv_item_cart_confirm_totalpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:text="Total point"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:text="Tổng điểm: "
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_item_cart_confirm_namebattery"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/tv_item_cart_confirm_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Total quantity"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_cart_confirm_namebattery"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Tổng số lượng: "
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tv_item_cart_confirm_point"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_cart_confirm_namebattery"
            android:textColor="@color/primary_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>